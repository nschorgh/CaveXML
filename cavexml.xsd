  <!-- declare special data type -->
  <xs:simpleType name="ExtendedUnsignedInteger">
    <xs:restriction base='xs:token'>
      <xs:pattern value="[0-9]*"/>   <!-- number or blank -->
      <xs:pattern value="[~&#62;]?[0-9]+"/>  <!-- one of two symbols and at least one digit -->
      <xs:pattern value="~?[0-9]+\+?"/>       <!-- tilde, at least one digit, and + -->
      <!-- Examples of matching patterns: 1234, ~1500, >27, 3500+
	   Examples of non-matching patterns: 123.4, >~2000, 100-200, >5+
      -->
    </xs:restriction>
  </xs:simpleType>

