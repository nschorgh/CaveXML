      <xs:element name = "cave-id" minOccurs="0" maxOccurs="unbounded" default="XXX-1234/5">  
	<xs:simpleType>
	  <xs:restriction base='xs:token'>
	    <xs:pattern value="[+-9A-Z]*"/>
	    <!-- Allows characters with ASCII codes from 43 to 57 and 65-90,
		 which includes numbers, capital letters, and a few symbols.
		 Examples of matching patterns: HSS-9876, 1234/5 -->
	  </xs:restriction>
	</xs:simpleType>
      </xs:element>
      
	<xs:element name = "latitude" minOccurs="0" maxOccurs="1" default="0">
	  <!-- default value makes empty entries valid -->
	  <xs:simpleType>
  	    <xs:restriction base="xs:decimal">
	      <xs:minInclusive value="-90"/>
	      <xs:maxInclusive value="+90"/>
	    </xs:restriction>
	  </xs:simpleType>
	</xs:element>
      
	<xs:element name = "longitude" minOccurs="0" maxOccurs="1" default="0">
	  <!-- default value makes empty entries valid -->
	  <xs:simpleType>
  	    <xs:restriction base="xs:decimal">
	      <xs:minInclusive value="-180"/>
	      <xs:maxInclusive value="+180"/>
	    </xs:restriction>
	  </xs:simpleType>
	</xs:element>

	<xs:element name = "altitude" minOccurs="0" maxOccurs="unbounded">  
	<xs:simpleType>
	  <xs:restriction base='xs:token'>
	    <xs:pattern value="[0-9]{0,5}[ ,()\w]*"/>   
	    <xs:pattern value="[~&#62;]?[0-9]{1,5}[+]?[ ,()\w]*"/>
	    <xs:pattern value="~?-?[0-9]{1,5}[ ,()\w]*"/> 
	    <xs:pattern value="[0-9]{1,5}[-–—][0-9]{1,5}"/>  
	    <!-- matches blank or number plus optional comment OR
		 imperfect ExtendedUnsignedInteger plus optional comment OR
		 tilde and/or negative symbol, integer, and optional comment OR
		 range of positive integers.
		 Examples of matching patterns: 4258, ~300 main entrance, 100-200, -500
		 Three dash-like symbols are allowed as range delimiter: 
		 hyphen-minus (x002D, ASCII), en-dash (x2011), and em-dash (x2012)
	    -->
	  </xs:restriction>
	</xs:simpleType>
      </xs:element>
	
